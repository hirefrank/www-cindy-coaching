---
import Layout from "../layouts/Layout.astro";
import CalButton from "../components/CalButton";
import { getHomepageContent, getGlobalSettings } from "../lib/cosmic";

// Fetch content from Cosmic
const homepageData = await getHomepageContent();
const globalSettings = await getGlobalSettings();

// Extract content with fallbacks
const headline =
    homepageData?.metadata?.headline ||
    "Physical Therapist turned ADHD Coach helping parents and neurodiverse individuals thrive through brain-body strategies";
const subhead =
    homepageData?.metadata?.subhead ||
    "With 25+ years of pediatric PT experience and ICF certification, I bridge the gap between brain science and practical daily strategies for ADHD and executive function challenges.";

const servicesHeadline =
    homepageData?.metadata?.services?.headline || "How I Can Help";
const servicesDescription =
    homepageData?.metadata?.services?.description ||
    "Combining my physical therapy background with ADHD coaching expertise to provide comprehensive support for individuals and families.";

const offering1 = homepageData?.metadata?.services?.["offering-1"]?.[0] || {
    title: "For Parents & Families",
    description:
        "Supporting parents in understanding and advocating for their neurodiverse children, plus direct coaching for teens and family consulting.",
};

const offering2 = homepageData?.metadata?.services?.["offering-2"]?.[0] || {
    title: "For Adults",
    description:
        "Individual ADHD and executive function coaching for adults looking to develop practical strategies and build sustainable systems.",
};

const offering3 = homepageData?.metadata?.services?.["offering-3"]?.[0] || {
    title: "For Organizations",
    description:
        "Teacher training, classroom support, and presentations for parent groups to build understanding of neurodiverse learners.",
};

const journeyTitle =
    homepageData?.metadata?.journey?.title ||
    "My Journey from PT to ADHD Coach";
const journeyDescription =
    homepageData?.metadata?.journey?.description ||
    "After 25+ years as a pediatric physical therapist specializing in brain-based rehabilitation, I discovered my true calling in ADHD coaching. My personal experience with ADHD, combined with my clinical expertise, gives me a unique perspective on the brain-body connection.\n\nAs a mother of triplet teenagers in Bergen County, I understand the daily challenges families face and the importance of practical, sustainable strategies.";

// Extract calendar links with fallbacks
const calendarLinks = {
    consultation:
        globalSettings?.metadata?.calendar_links?.free_consultation ||
        "cindy-romanzo/consultation",
    officeHours:
        globalSettings?.metadata?.calendar_links?.office_hours ||
        "cindy-romanzo/office-hours",
};

// Helper function to extract cal.com slug from full URL
const getCalSlug = (url: string) => {
    if (url.includes("cal.com/")) {
        return url.split("cal.com/")[1];
    }
    return url;
};
---

<Layout title="Mindful Balance ADHD Coaching" description={headline}>
    <!-- Hero Section -->
    <section
        class="section-padding bg-gradient-to-b from-muted/30 to-background"
    >
        <div class="max-w-7xl mx-auto container-padding">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-48 items-center">
                <div class="animate-fade-in">
                    <h1 class="mb-24">
                        {headline}
                    </h1>
                    <p
                        class="text-xl text-muted-foreground mb-32 leading-relaxed"
                    >
                        {subhead}
                    </p>
                    <div class="flex flex-col sm:flex-row gap-16">
                        <CalButton
                            calLink={getCalSlug(calendarLinks.officeHours)}
                            className="btn-primary"
                            namespace="hero-office-hours"
                            client:load
                        >
                            Schedule Office Hours
                        </CalButton>
                        <a href="/services" class="btn-outline">
                            Learn About My Services
                        </a>
                    </div>
                </div>

                <div class="relative">
                    <div
                        class="aspect-square bg-gradient-to-br from-primary/10 to-secondary/10 rounded-3xl p-8 overflow-hidden w-[76%] mx-auto"
                    >
                        <img
                            src="/images/logo.svg"
                            alt="Cindy Romanzo - ICF Certified ADHD Coach"
                            class="w-full h-full object-cover rounded-2xl shadow-lg"
                        />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Professional Badges -->
    <section class="py-48 bg-white">
        <div class="max-w-7xl mx-auto container-padding">
            <div
                class="flex flex-wrap justify-center items-center gap-32 md:gap-48"
            >
                <div
                    class="animate-fade-in w-[100px] sm:w-[125px] md:w-[150px]"
                >
                    <img
                        src="/images/badges/ACC.png"
                        alt="ACC Credential"
                        class="w-full h-auto object-contain"
                    />
                </div>
                <div
                    class="animate-fade-in w-[100px] sm:w-[125px] md:w-[150px]"
                >
                    <img
                        src="/images/badges/ACO.png"
                        alt="ACO Certification"
                        class="w-full h-auto object-contain"
                    />
                </div>
                <div
                    class="animate-fade-in w-[100px] sm:w-[125px] md:w-[150px]"
                >
                    <img
                        src="/images/badges/ICF_Member.png"
                        alt="ICF Member"
                        class="w-full h-auto object-contain"
                    />
                </div>
                <div
                    class="animate-fade-in w-[100px] sm:w-[125px] md:w-[150px]"
                >
                    <img
                        src="/images/badges/JST_Web_Graduate.png"
                        alt="JST Web Graduate"
                        class="w-full h-auto object-contain"
                    />
                </div>
                <div
                    class="animate-fade-in w-[100px] sm:w-[125px] md:w-[150px]"
                >
                    <img
                        src="/images/badges/cas.png"
                        alt="CAS Certification"
                        class="w-full h-auto object-contain"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Services Preview -->
    <section class="section-padding bg-muted/30">
        <div class="max-w-7xl mx-auto container-padding">
            <div class="text-center mb-64">
                <h2 class="mb-24">{servicesHeadline}</h2>
                <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
                    {servicesDescription}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-32">
                <div
                    class="bg-card rounded-lg shadow-sm animate-fade-in hover:shadow-lg transition-shadow duration-300 flex flex-col h-full"
                >
                    <div class="p-32 flex flex-col flex-grow">
                        <div class="mb-24">
                            <img
                                src="/images/illustrations/parents.png"
                                alt="Parents & Families"
                                class="w-full h-auto object-contain rounded-lg"
                            />
                        </div>
                        <h3 class="mb-16">{offering1.title}</h3>
                        <p class="text-muted-foreground mb-24 flex-grow">
                            {offering1.description}
                        </p>
                        <a
                            href="/services"
                            class="inline-block w-full text-center border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground px-6 py-3 rounded-lg font-medium transition-all duration-200 mt-auto"
                        >
                            Learn More
                        </a>
                    </div>
                </div>

                <div
                    class="bg-card rounded-lg shadow-sm animate-fade-in hover:shadow-lg transition-shadow duration-300 flex flex-col h-full"
                >
                    <div class="p-32 flex flex-col flex-grow">
                        <div class="mb-24">
                            <img
                                src="/images/illustrations/adult.png"
                                alt="Adults"
                                class="w-full h-auto object-contain rounded-lg"
                            />
                        </div>
                        <h3 class="mb-16">{offering2.title}</h3>
                        <p class="text-muted-foreground mb-24 flex-grow">
                            {offering2.description}
                        </p>
                        <a
                            href="/services"
                            class="inline-block w-full text-center border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground px-6 py-3 rounded-lg font-medium transition-all duration-200 mt-auto"
                        >
                            Learn More
                        </a>
                    </div>
                </div>

                <div
                    class="bg-card rounded-lg shadow-sm animate-fade-in hover:shadow-lg transition-shadow duration-300 flex flex-col h-full"
                >
                    <div class="p-32 flex flex-col flex-grow">
                        <div class="mb-24">
                            <img
                                src="/images/illustrations/organizations.png"
                                alt="Organizations"
                                class="w-full h-auto object-contain rounded-lg"
                            />
                        </div>
                        <h3 class="mb-16">{offering3.title}</h3>
                        <p class="text-muted-foreground mb-24 flex-grow">
                            {offering3.description}
                        </p>
                        <a
                            href="/services"
                            class="inline-block w-full text-center border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground px-6 py-3 rounded-lg font-medium transition-all duration-200 mt-auto"
                        >
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Preview -->
    <section class="section-padding">
        <div class="max-w-7xl mx-auto container-padding">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-48 items-center">
                <div>
                    <h2 class="mb-24">{journeyTitle}</h2>
                    {
                        journeyDescription
                            .split("\n\n")
                            .map((paragraph: string) => (
                                <p class="text-lg text-muted-foreground mb-24 leading-relaxed">
                                    {paragraph}
                                </p>
                            ))
                    }
                    <a href="/about" class="btn-primary">
                        Read My Full Story
                    </a>
                </div>

                <div class="relative">
                    <div
                        class="aspect-[4/3] bg-gradient-to-br from-secondary/10 to-primary/10 rounded-3xl p-6 overflow-hidden"
                    >
                        <img
                            src="/images/2023-03-29_CIndy_Romanzo_Headshots_2_WEB.jpg"
                            alt="Cindy Romanzo - ADHD Coach and Physical Therapist"
                            class="w-full h-full object-cover rounded-2xl shadow-lg scale-[1.15] object-center"
                        />
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
